<%= form_with(model: coin) do |form| %>
  <% if coin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(coin.errors.count, "error") %> prohibited this coin from being saved:</h2>

      <ul>
        <% coin.errors.each do |error| %>
          <li class="alert alert-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div>
    <%= form.label :acronym, style: "display: block" %>
    <%= form.text_field :acronym, class: "form-control" %>
  </div>

  <div>
    <%= form.label :url_image, style: "display: block" %>
    <%= form.text_field :url_image, class: "form-control" %>
    <%= image_tag coin.url_image ? coin.url_image : "" , size: "30x30", class: "mt-2" %>
  </div>

  <div>
    <%= form.submit "Cadastrar",style: "display: block; width: 100%", class: "btn btn-primary mt-4 p-2" %>
  </div>
<% end %>
