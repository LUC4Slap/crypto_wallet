<p style="color: green"><%= notice %></p>

<h1>Coins</h1>

<div id="coins">
  <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">sigla</th>
      <th scope="col">imagem</th>
      <th scope="col">Ação</th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <%= render coin %>
      <p>
        <%= link_to "Show this coin", coin %>
      </p>
    <% end %>
   </tbody>
  </table>
</div>

<%= link_to "Nova Moeda", new_coin_path %>
